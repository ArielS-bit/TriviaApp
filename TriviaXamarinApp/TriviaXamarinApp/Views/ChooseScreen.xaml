<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TriviaXamarinApp.ViewModel"
             x:Class="TriviaXamarinApp.Views.ChooseScreen"
             Title="Intro">
    
    <ContentPage.BindingContext>
        <local:ChooseViewModel></local:ChooseViewModel>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>

            <Label HorizontalOptions="CenterAndExpand" FontSize="Large" TextColor="#487eb0">Welcome to Trivia Challenge!!!</Label>
            <Line/>
            <Line/>
            <Line/>

            <Frame CornerRadius="0" Padding="14">

                <Label Text="{Binding Text}" FontSize="40" HorizontalOptions="Center"></Label>

            </Frame>

            <Button x:Name="GuestBtn" Text="Play as a Guest" Margin="50" Command="{Binding GuestCommand}" />
            <Button x:Name="LogInBtn" Text="Log In" Margin="60" Command="{Binding LogInCommand}"/>
            <Button x:Name="SignUpBtn" Text="Sign Up" Margin="70" Command="{Binding SignUpCommand}"/>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>