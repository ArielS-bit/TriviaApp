<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TriviaXamarinApp.ViewModel" Title="Question!"
             x:Class="TriviaXamarinApp.Views.QuestionScreen">
    
    <ContentPage.Content>
        
        <StackLayout Spacing="2.5">
            
            <Label Text="Question!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button  FontSize="20" Opacity="0.7" Text="{Binding }" HorizontalTextAlignment="Center" MaxLength="10" Keyboard="Chat" Margin="80" PlaceholderColor="Wheat"/>

            <Button  FontSize="20" Opacity="0.7" Text="{Binding }" HorizontalTextAlignment="Center" MaxLength="10" Keyboard="Email" Margin="80" PlaceholderColor="Wheat"/>

            <Button FontSize="20" Opacity="0.7" Text="{Binding }" HorizontalTextAlignment="Center" MaxLength="10" Keyboard="Chat" Margin="80" PlaceholderColor="Wheat" IsPassword="True"/>

            <Button FontSize="20" Opacity="0.7" Text="{Binding }" HorizontalTextAlignment="Center" MaxLength="10" Keyboard="Chat" Margin="80" PlaceholderColor="Wheat" IsPassword="True"/>

            
            <Button x:Name="Submit" Command="{Binding SignUpCommand}" Clicked="Submit_Clicked" Text="Check me!!!" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>